#!/bin/bash

EMAIL_LIST="kpugh@teleflora.com,mgreen@teleflora.com"

hostnamectl status >>/tmp/updateos.log
echo "" >>/tmp/updateos.log
echo "------">>/tmp/updateos.log
echo `date` >>/tmp/updateos.log
echo "------">>/tmp/updateos.log
mail -s "Staging results for `hostname`." $EMAIL_LIST </tmp/updateos.log
