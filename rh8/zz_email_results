#!/bin/bash

EMAIL_LIST="kpugh@teleflora.com,mgreen@teleflora.com"

/usr/bin/hostnamectl status >>/tmp/updateos.log

echo "" >>/tmp/updateos.log
echo "------">>/tmp/updateos.log
echo `date` >>/tmp/updateos.log
echo "------">>/tmp/updateos.log

/usr/bin/mail -s "Staging results for `hostname`." $EMAIL_LIST </tmp/updateos.log
